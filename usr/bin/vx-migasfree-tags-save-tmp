#!/bin/bash

FICHFUCS="/usr/bin/vx-funcs-bash"
[ -f "${FICHFUCS}" ] && . "${FICHFUCS}"

vx-check_user_root

# Fichero donde se guardan temporalmente las tags:
FICH="/tmp/migasfree.tags"

if ! [ -z "${1}" ] ; then
    echo -n "${@}" > "${FICH}" && \
    echo "=> Ok!! Etiquetas Guardadas en ${FICH}" || \
    echo "=> Error!! No se han podido guardar las etiquetas en ${FICH}"
else
    if ETIQUETAS=$(sudo migasfree-tags -g 2> /dev/null) ; then
        echo "${ETIQUETAS}" > /tmp/migasfree.tags
        chmod 644 /tmp/migasfree.tags
    fi
fi

