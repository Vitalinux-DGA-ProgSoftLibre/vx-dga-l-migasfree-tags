#!/bin/bash

FICHFUCS="/usr/bin/vx-funcs-bash"
[ -f "${FICHFUCS}" ] && . "${FICHFUCS}"

vx-check_user_root

FICH="/tmp/migasfree.tags"
if [[ "${1}" == "-g" ]] ; then
    if ETIQUETAS="$(migasfree-tags --save-tmp)" ; then
        echo "${FICH}: $(cat ${FICH})"
    fi
else
    echo -n "${@}" > "${FICH}" && \
    echo "=> Ok!! Etiquetas Guardadas en ${FICH}: ${@}" || \
    echo "=> Error!! No se han podido guardar las etiquetas en ${FICH}"
fi
