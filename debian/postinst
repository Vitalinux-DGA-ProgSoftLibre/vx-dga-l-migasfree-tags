#!/bin/bash
# postinst script for vx-dga-l-migasfree-tags
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        for FICH in "/usr/bin/vx-check_usuario_admin" \
        "/usr/bin/vx-migasfree-consultar-tags" \
        "/usr/bin/vx-migasfree-modificar-tags" \
        "/usr/bin/vx-migasfree-tags-save-tmp" ; do
            if test -f "${FICH}" ; then
                chmod +x "${FICH}" && \
                echo "=> Asignando permiso de Ejecución: ${FICH}"
            fi
        done
        chmod +x "/usr/bin/vx-migasfree-"* && \
        echo "=> Asignando permisos de ejecución a los scripts: vx-migasfree-*"
        
        # Divertimos el ejecutable migasfree-tags para hacer un lock y evitar errores en migasfree:
        PAQUETE="vx-dga-l-migasfree-tags"
        _FILE=/usr/bin/migasfree-tags
        dpkg-divert --add --package "${PAQUETE}" --rename \
        --divert $_FILE.orig $_FILE
        [ ! -e $_FILE -o -L $_FILE ] && \
        [ -f "/usr/share/divert$_FILE" ] && \
        chmod +x "/usr/share/divert$_FILE" && \
        ln -sf /usr/share/divert$_FILE $_FILE
        
    ;;
    
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;
    
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
